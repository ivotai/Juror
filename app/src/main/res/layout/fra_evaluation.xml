<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:textColor="@color/md_black"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvIndex"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorAccent"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.39" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="/6"
                android:textColor="@color/md_grey_500"
                android:textSize="16dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvIndex"
                app:layout_constraintEnd_toEndOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/md_grey_200" />

        <LinearLayout
            android:id="@+id/llOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_vertical">

            <com.flyco.roundview.RoundTextView
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/rtvOne"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"
                app:rv_backgroundColor="#ffffff"
                app:rv_isRadiusHalfHeight="true"
                app:rv_strokeColor="@color/colorAccent"
                app:rv_strokeWidth="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="优秀"
                android:textColor="@color/md_grey_600"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_vertical">

            <com.flyco.roundview.RoundTextView
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/rtvTwo"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"
                app:rv_backgroundColor="#ffffff"
                app:rv_isRadiusHalfHeight="true"
                app:rv_strokeColor="@color/colorAccent"
                app:rv_strokeWidth="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="良好"
                android:textColor="@color/md_grey_600"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_vertical">

            <com.flyco.roundview.RoundTextView
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/rtvThree"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"
                app:rv_backgroundColor="#ffffff"
                app:rv_isRadiusHalfHeight="true"
                app:rv_strokeColor="@color/colorAccent"
                app:rv_strokeWidth="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="合格"
                android:textColor="@color/md_grey_600"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_vertical">

            <com.flyco.roundview.RoundTextView
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/rtvFour"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"
                app:rv_backgroundColor="#ffffff"
                app:rv_isRadiusHalfHeight="true"
                app:rv_strokeColor="@color/colorAccent"
                app:rv_strokeWidth="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="不合格"
                android:textColor="@color/md_grey_600"
                android:textSize="16dp" />

        </LinearLayout>

        <EditText
            android:textSize="16dp"
            android:textColor="@color/md_black"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/etAdvice"
            android:textColorHint="@color/md_grey_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="意见和建议"/>

    </LinearLayout>

</ScrollView>