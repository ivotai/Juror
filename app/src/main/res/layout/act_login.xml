<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_white">

        <com.unicorn.juror.main.appbar.AppBar
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="56dp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:gravity="center"
            android:text="陕西法院\n人民陪审员平台"
            android:textColor="@color/md_grey_600"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBar"
            tools:ignore="HardcodedText,SpUsage" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="32dp"
            android:hint="请输入账号"
            android:singleLine="true"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:met_floatingLabel="highlight"
            tools:ignore="HardcodedText,SpUsage" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etUsername"
            app:met_floatingLabel="highlight"
            tools:ignore="HardcodedText,SpUsage" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/tvLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="64dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="登录"
            android:textColor="@color/md_white"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPassword"
            app:rv_backgroundColor="@color/colorPrimary"
            app:rv_backgroundPressColor="#0154b4"
            app:rv_cornerRadius="5dp"
            tools:ignore="HardcodedText,SpUsage" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/tvRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="个人报名申请"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLogin"
            app:rv_backgroundColor="@color/md_white"
            app:rv_cornerRadius="5dp"
            app:rv_strokeColor="@color/colorPrimary"
            app:rv_strokePressColor="#0154b4"
            app:rv_strokeWidth="1dp"
            app:rv_textPressColor="#0154b4"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/tvVisitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:text="游客登录"
            android:textColor="@color/md_red_400"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPassword"
            tools:ignore="HardcodedText,SpUsage" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>