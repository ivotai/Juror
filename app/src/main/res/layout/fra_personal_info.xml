<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/llName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lName"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="姓名"
                android:textSize="14dp"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="14dp"
                tools:ignore="HardcodedText,LabelFor,SpUsage,TextFields" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSex"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lSex"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="性别"
                android:textSize="14dp"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/tvSex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="14dp"
                tools:ignore="HardcodedText,LabelFor,SpUsage,TextFields" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNativePlace"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lNativePlace"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="籍贯"
                android:textSize="14dp"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/tvNativePlace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="14dp"
                tools:ignore="HardcodedText,LabelFor,SpUsage,TextFields" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lNation"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="民族"
                android:textSize="14dp"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/tvNation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="14dp"
                tools:ignore="HardcodedText,LabelFor,SpUsage,TextFields" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llBirthday"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lBirthday"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="出生日期"
                android:textSize="14dp"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/tvBirthday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="14dp"
                tools:ignore="HardcodedText,LabelFor,SpUsage,TextFields" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llIdentityCard"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lIdentityCard"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="身份证号"
                android:textSize="14dp"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/tvIdentityCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="14dp"
                tools:ignore="HardcodedText,LabelFor,SpUsage,TextFields" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTelephone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lTelephone"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="联系手机"
                android:textSize="14dp"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/tvTelephone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="14dp"
                tools:ignore="HardcodedText,LabelFor,SpUsage,TextFields" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lAddress"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="住址"
                android:textSize="14dp"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="14dp"
                tools:ignore="HardcodedText,LabelFor,SpUsage,TextFields" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>